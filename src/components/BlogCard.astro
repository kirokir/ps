---
export interface Props {
  post: {
    slug: string;
    data: {
      title: string;
      featured_image: string;
      excerpt: string;
      date: Date;
    };
  };
}

const { post } = Astro.props;
const formattedDate = new Date(post.data.date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="group card bg-white dark:bg-gray-800 p-0 overflow-hidden">
  <a href={`/blog/${post.slug}`} class="block overflow-hidden">
    <img
      src={post.data.featured_image}
      alt={post.data.title}
      class="w-full h-56 object-cover transition-transform duration-500 group-hover:scale-110"
      loading="lazy"
    />
  </a>
  <div class="p-6">
    <time datetime={post.data.date.toISOString()} class="text-sm text-gray-500 dark:text-gray-400">
      {formattedDate}
    </time>
    <h3 class="mt-2 text-xl font-serif font-semibold text-gray-900 dark:text-white">
      <a href={`/blog/${post.slug}`} class="hover:text-royal-600 dark:hover:text-royal-400 transition-colors">
        {post.data.title}
      </a>
    </h3>
    <p class="mt-3 text-gray-600 dark:text-gray-300 line-clamp-3">
      {post.data.excerpt}
    </p>
    <div class="mt-4">
      <a href={`/blog/${post.slug}`} class="font-semibold text-royal-600 dark:text-royal-400 hover:underline">
        Read More &rarr;
      </a>
    </div>
  </div>
</article>