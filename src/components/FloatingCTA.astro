---
// This component can be placed directly in BaseLayout.astro
---
<div class="fixed bottom-6 right-6 z-50 group" id="floating-cta-container">
  <a 
    href="/contact" 
    class="bg-gradient-to-r from-royal-600 to-gold-600 text-white p-4 rounded-full shadow-2xl transition-all duration-300 transform group-hover:scale-110 focus:outline-none focus:ring-2 ring-royal-500 ring-offset-2 animate-pulse"
    aria-label="Book a session"
  >
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
    </svg>
  </a>
  
  <div class="absolute bottom-full right-0 mb-2 px-3 py-1.5 bg-gray-800 text-white text-sm rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap pointer-events-none">
    Book a Session
  </div>
</div>

<script>
  // Hide floating CTA when footer is visible
  const floatingCta = document.getElementById('floating-cta-container');
  const footerEl = document.querySelector('footer');

  if (floatingCta && footerEl) {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach(entry => {
          // If footer is intersecting (visible), add class to hide CTA
          floatingCta.classList.toggle('translate-y-24', entry.isIntersecting);
        });
      }, 
      { threshold: 0.1 } // Trigger when 10% of the footer is visible
    );
    observer.observe(footerEl);
  }
</script>

<style>
  #floating-cta-container {
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
</style>