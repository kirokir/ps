---
const currentYear = new Date().getFullYear();

const navigation = {
  main: [
    { name: 'Home', href: '/' },
    { name: 'Portfolio', href: '/portfolio' },
    { name: 'About', href: '/about' },
    { name: 'Blog', href: '/blog' },
    { name: 'FAQ', href: '/faq' },
    { name: 'Contact', href: '/contact' }
  ],
  services: [
    { name: 'Wedding Photography', href: '/portfolio?category=weddings' },
    { name: 'Portrait Sessions', href: '/portfolio?category=portraits' },
    { name: 'Commercial Work', href: '/portfolio?category=commercial' },
    { name: 'Event Photography', href: '/portfolio?category=events' },
    { name: 'Videography', href: '/portfolio?category=videography' }
  ],
  legal: [
    { name: 'Privacy Policy', href: '/privacy' },
    { name: 'Terms of Service', href: '/terms' },
    { name: 'Accessibility', href: '/accessibility' }
  ],
  social: [
    { name: 'Instagram', href: 'https://instagram.com/photofirm', icon: 'instagram' },
    { name: 'Facebook', href: 'https://facebook.com/photofirm', icon: 'facebook' },
    { name: 'LinkedIn', href: 'https://linkedin.com/company/photofirm', icon: 'linkedin' },
    { name: 'YouTube', href: 'https://youtube.com/@photofirm', icon: 'youtube' },
    { name: 'Pinterest', href: 'https://pinterest.com/photofirm', icon: 'pinterest' }
  ]
};

const contactInfo = {
  phone: '+1 (555) 123-0123',
  email: 'hello@photofirm.com',
  address: { street: '123 Creative Avenue', city: 'New York', state: 'NY', zip: '10001' },
  hours: { weekdays: 'Mon-Fri: 9:00 AM - 6:00 PM', saturday: 'Sat: 10:00 AM - 4:00 PM', sunday: 'Sun: By Appointment' }
};
---

<footer class="bg-gray-900 text-white relative overflow-hidden">
  <!-- Decorative background -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute top-10 left-10 w-32 h-32 bg-gradient-to-br from-gold-400 to-transparent rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-20 w-40 h-40 bg-gradient-to-br from-royal-400 to-transparent rounded-full blur-3xl"></div>
  </div>

  <div class="container-custom relative">
    <!-- Main footer content -->
    <div class="pt-16 pb-8 lg:pt-20 lg:pb-12">
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8 lg:gap-12">
        
        <!-- Company Info -->
        <div class="lg:col-span-1">
          <a href="/" class="flex items-center space-x-2 mb-6" aria-label="PhotoFirm Home">
            <div class="w-10 h-10 bg-gradient-to-br from-royal-500 to-gold-500 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
            </div>
            <span class="text-xl font-serif font-semibold">PhotoFirm</span>
          </a>
          <p class="text-gray-300 mb-6 leading-relaxed">Capturing life's most beautiful moments with artistry, passion, and precision.</p>
          <div class="space-y-3 text-sm text-gray-400">
            <div class="flex items-center"><svg class="w-4 h-4 mr-3 text-gold-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg><a href={`tel:${contactInfo.phone}`} class="hover:text-white">{contactInfo.phone}</a></div>
            <div class="flex items-center"><svg class="w-4 h-4 mr-3 text-gold-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg><a href={`mailto:${contactInfo.email}`} class="hover:text-white">{contactInfo.email}</a></div>
            <div class="flex items-start"><svg class="w-4 h-4 mr-3 mt-0.5 text-gold-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg><address class="not-italic">{contactInfo.address.street}<br/>{contactInfo.address.city}, {contactInfo.address.state} {contactInfo.address.zip}</address></div>
          </div>
        </div>

        <!-- Navigation Links -->
        <div class="grid grid-cols-2 gap-8 lg:col-span-2">
          <div><h3 class="text-sm font-semibold uppercase tracking-wider mb-4">Navigation</h3><ul class="space-y-3">{navigation.main.map(item => <li><a href={item.href} class="text-gray-300 hover:text-white text-sm">{item.name}</a></li>)}</ul></div>
          <div><h3 class="text-sm font-semibold uppercase tracking-wider mb-4">Services</h3><ul class="space-y-3">{navigation.services.map(item => <li><a href={item.href} class="text-gray-300 hover:text-white text-sm">{item.name}</a></li>)}</ul></div>
        </div>

        <!-- Newsletter & Social -->
        <div class="lg:col-span-1">
          <div class="mb-8">
            <h3 class="text-sm font-semibold uppercase tracking-wider mb-4">Stay Updated</h3>
            <p class="text-gray-300 text-sm mb-4">Subscribe for latest work and photography tips.</p>
            <form class="space-y-3" name="newsletter" netlify-honeypot="bot-field" data-netlify="true"><input type="hidden" name="bot-field" /><input type="hidden" name="form-name" value="newsletter" /><div class="relative"><input type="email" name="email" required class="w-full px-4 py-2.5 bg-gray-800 border border-gray-700 rounded-xl placeholder-gray-400 focus:ring-2 focus:ring-royal-500" placeholder="Enter your email" aria-label="Email address"/></div><button type="submit" class="w-full bg-gradient-to-r from-royal-600 to-gold-600 py-2.5 px-4 rounded-xl font-medium hover:from-royal-700 transition transform hover:scale-105">Subscribe</button></form>
          </div>
          <div class="mb-8">
            <h3 class="text-sm font-semibold uppercase tracking-wider mb-4">Hours</h3>
            <div class="space-y-2 text-sm text-gray-300"><p>{contactInfo.hours.weekdays}</p><p>{contactInfo.hours.saturday}</p><p>{contactInfo.hours.sunday}</p></div>
          </div>
          <div>
            <h3 class="text-sm font-semibold uppercase tracking-wider mb-4">Follow Us</h3>
            <div class="flex space-x-4">
              {navigation.social.map(item => <a href={item.href} class="group bg-gray-800 p-2.5 rounded-xl hover:bg-gradient-to-br from-royal-600 to-gold-600 transition transform hover:scale-110" aria-label={`Follow us on ${item.name}`} target="_blank" rel="noopener noreferrer">
                {item.icon === 'instagram' && <svg class="w-5 h-5 text-gray-300 group-hover:text-white" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.85s-.011 3.584-.069 4.85c-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07s-3.584-.012-4.85-.07c-3.252-.148-4.771-1.691-4.919-4.919-.058-1.265-.069-1.645-.069-4.85s.011-3.584.069-4.85c.149-3.225 1.664-4.771 4.919-4.919C8.416 2.175 8.796 2.163 12 2.163m0-1.625C8.724.538 8.32.526 7.053.582 4.022.723 2.176 2.178.723 4.625.582 5.99.538 6.394.538 9.6c0 3.206.044 3.608.185 4.872.148 2.447 1.67 3.965 4.117 4.112.975.053 1.242.06 3.16.06 1.918 0 2.185-.007 3.16-.06a4.234 4.234 0 004.117-4.112c.141-1.264.185-1.666.185-4.872 0-3.206-.044-3.608-.185-4.872a4.234 4.234 0 00-4.117-4.112C15.682.526 15.278.538 12 .538zM12 6.865a5.135 5.135 0 100 10.27 5.135 5.135 0 000-10.27zm0 8.71a3.575 3.575 0 110-7.15 3.575 3.575 0 010 7.15zM18.416 4.96a1.44 1.44 0 100 2.88 1.44 1.44 0 000-2.88z"></path></svg>}
                {item.icon === 'facebook' && <svg class="w-5 h-5 text-gray-300 group-hover:text-white" fill="currentColor" viewBox="0 0 24 24"><path d="M22.675 0H1.325C.593 0 0 .593 0 1.325v21.35C0 23.407.593 24 1.325 24H12.82v-9.294H9.692v-3.622h3.128V8.413c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.795.143v3.24l-1.918.001c-1.504 0-1.795.715-1.795 1.763v2.313h3.587l-.467 3.622h-3.12V24h6.116c.732 0 1.325-.593 1.325-1.325V1.325C24 .593 23.407 0 22.675 0z"></path></svg>}
                {item.icon === 'linkedin' && <svg class="w-5 h-5 text-gray-300 group-hover:text-white" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"></path></svg>}
                {item.icon === 'youtube' && <svg class="w-5 h-5 text-gray-300 group-hover:text-white" fill="currentColor" viewBox="0 0 24 24"><path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"></path></svg>}
                {item.icon === 'pinterest' && <svg class="w-5 h-5 text-gray-300 group-hover:text-white" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.627 0-12 5.372-12 12 0 5.084 3.163 9.426 7.627 11.174-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.097.118.11.22.081.343-.09.36-.294 1.189-.334 1.357-.053.225-.172.271-.402.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.357-.629-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146 1.124.343 2.31.526 3.54.526 6.627 0 12-5.373 12-12s-5.373-12-12-12z"></path></svg>}
              </a>)}
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="border-t border-gray-800 py-6">
      <div class="flex flex-col lg:flex-row justify-between items-center space-y-4 lg:space-y-0">
        <p class="text-sm text-gray-400">&copy; {currentYear} PhotoFirm Studio. All rights reserved.</p>
        <nav class="flex flex-wrap justify-center gap-x-6 gap-y-2" aria-label="Legal navigation">
          {navigation.legal.map(item => <a href={item.href} class="text-sm text-gray-400 hover:text-white">{item.name}</a>)}
        </nav>
        <button id="back-to-top" class="group bg-gray-800 p-2.5 rounded-xl hover:bg-royal-600 transition" aria-label="Back to top">
          <svg class="w-5 h-5 text-gray-300 group-hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path></svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Floating CTA Button -->
  <div class="fixed bottom-6 right-6 z-50 group" id="floating-cta-container">
    <a href="/contact" class="bg-gradient-to-r from-royal-600 to-gold-600 text-white p-4 rounded-full shadow-2xl transition transform group-hover:scale-110 focus:outline-none focus:ring-2 ring-royal-500 ring-offset-2 animate-pulse" aria-label="Book a session">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path></svg>
    </a>
    <div class="absolute bottom-full right-0 mb-2 px-3 py-1.5 bg-gray-800 text-white text-sm rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap pointer-events-none" id="cta-tooltip">Book a Session</div>
  </div>
</footer>

<script>
  // Back to top functionality
  const backToTopButton = document.getElementById('back-to-top');
  const floatingCta = document.getElementById('floating-cta-container');
  const footerEl = document.querySelector('footer');

  window.addEventListener('scroll', () => {
    if (window.pageYOffset > 300) {
      backToTopButton?.classList.add('opacity-100');
      backToTopButton?.classList.remove('opacity-0', 'pointer-events-none');
    } else {
      backToTopButton?.classList.remove('opacity-100');
      backToTopButton?.classList.add('opacity-0', 'pointer-events-none');
    }
  });

  backToTopButton?.addEventListener('click', () => {
    window.scrollTo({ top: 0, behavior: 'smooth' });
  });

  // Hide floating CTA when footer is visible
  if (floatingCta && footerEl) {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach(entry => {
          floatingCta.classList.toggle('translate-y-24', entry.isIntersecting);
        });
      }, { threshold: 0.1 }
    );
    observer.observe(footerEl);
  }

  // Netlify newsletter form submission
  const newsletterForm = document.querySelector('form[name="newsletter"]');
  newsletterForm?.addEventListener('submit', (e) => {
    e.preventDefault();
    const formData = new FormData(newsletterForm);
    const submitButton = newsletterForm.querySelector('button');
    const originalText = submitButton.textContent;
    submitButton.textContent = 'Subscribing...';
    submitButton.disabled = true;

    fetch('/', {
      method: 'POST',
      headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
      body: new URLSearchParams(formData).toString()
    })
    .then(() => {
      submitButton.textContent = 'Subscribed!';
      submitButton.classList.remove('from-royal-600', 'to-gold-600');
      submitButton.classList.add('bg-green-600');
      newsletterForm.reset();
    })
    .catch((error) => {
      alert('Error subscribing. Please try again.');
      submitButton.textContent = 'Try Again';
    })
    .finally(() => {
      setTimeout(() => {
        submitButton.textContent = originalText;
        submitButton.disabled = false;
        submitButton.classList.add('from-royal-600', 'to-gold-600');
        submitButton.classList.remove('bg-green-600');
      }, 3000);
    });
  });
</script>

<style>
  #back-to-top {
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease-in-out;
  }
  #floating-cta-container {
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
</style>