---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import PortfolioGrid from '../../components/PortfolioGrid.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';

// Fetch all portfolio items from the content directory
const allPortfolioItems = await getCollection('portfolio');
---
<BaseLayout title="Our Portfolio | PhotoFirm Studio">
  <Navbar slot="nav" />
  <main>
    <PortfolioGrid items={allPortfolioItems} />
  </main>
  <Footer slot="footer" />
</BaseLayout>