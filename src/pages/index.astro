---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import PortfolioGrid from '../components/PortfolioGrid.astro';
import Footer from '../components/Footer.astro';

// Sample portfolio data
const featuredPortfolio = [
  { id: '1', title: "Sarah & Michael's Garden Wedding", category: ['weddings', 'outdoor'], image: 'https://res.cloudinary.com/demo/image/upload/sample', slug: 'sarah-michael-garden-wedding', date: '2024-08-15', location: 'Napa Valley, CA', client: 'Sarah & Michael' },
  { id: '2', title: 'Corporate Headshots - Tech Startup', category: ['commercial', 'portraits'], image: 'https://res.cloudinary.com/demo/image/upload/samples/people/kitchen-bar', slug: 'tech-startup-headshots', date: '2024-07-22', location: 'San Francisco, CA', client: 'InnovateTech' },
  { id: '3', title: "Emily's Maternity Session", category: ['portraits', 'maternity'], image: 'https://res.cloudinary.com/demo/image/upload/samples/people/jazz', slug: 'emily-maternity-session', date: '2024-06-10', location: 'Golden Gate Park', client: 'Emily & James' },
  { id: '4', title: 'Downtown Fashion Editorial', category: ['fashion', 'commercial'], image: 'https://res.cloudinary.com/demo/image/upload/samples/fashion/shoes', slug: 'downtown-fashion-editorial', date: '2024-05-28', location: 'New York, NY', client: 'Vogue Magazine' },
  { id: '5', title: 'Annual Company Gala', category: ['events', 'commercial'], image: 'https://res.cloudinary.com/demo/image/upload/samples/people/smiling-man', slug: 'annual-company-gala', date: '2024-04-18', location: 'The Plaza Hotel', client: 'Goldman & Associates' },
  { id: '6', title: 'Couples Portrait in Tuscany', category: ['portraits', 'destination'], image: 'https://res.cloudinary.com/demo/image/upload/samples/landscapes/nature-mountains', slug: 'couples-portrait-tuscany', date: '2024-03-12', location: 'Florence, Italy', client: 'Alexandra & David' }
];

// Sample testimonials
const testimonials = [
  { id: '1', quote: "PhotoFirm captured our wedding day with such artistry and emotion. Every photo tells our story perfectly.", author: 'Sarah Johnson', role: 'Bride', image: 'https://res.cloudinary.com/demo/image/upload/w_150,h_150,c_fill,g_face/samples/people/smiling-man', rating: 5 },
  { id: '2', quote: "Professional, creative, and incredibly talented. Our corporate headshots have never looked better.", author: 'Michael Chen', role: 'CEO, InnovateTech', image: 'https://res.cloudinary.com/demo/image/upload/w_150,h_150,c_fill,g_face/samples/people/kitchen-bar', rating: 5 },
  { id: '3', quote: "The maternity session was magical. They made me feel beautiful and captured this special time perfectly.", author: 'Emily Rodriguez', role: 'New Mother', image: 'https://res.cloudinary.com/demo/image/upload/w_150,h_150,c_fill,g_face/samples/people/jazz', rating: 5 }
];

const pageTitle = "PhotoFirm Studio | Award-Winning Photography & Videography";
const pageDescription = "Professional photography and videography studio specializing in weddings, portraits, and commercial work. Capturing life's most beautiful moments with artistry and precision.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Navbar slot="nav" />
  
  <Hero 
    title="Capturing Life's Most Beautiful Moments"
    subtitle="Award-winning photography and videography studio specializing in weddings, portraits, and commercial work."
    ctaPrimary={{ text: "View Portfolio", href: "/portfolio" }}
    ctaSecondary={{ text: "Book Session", href: "/contact" }}
  />

  <section class="section-padding bg-white dark:bg-gray-800" id="about-section">
    <div class="container-custom grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <div class="order-2 lg:order-1">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-serif font-bold text-gray-900 dark:text-white mb-6">
          Where Artistry Meets <span class="bg-gradient-to-r from-royal-600 to-gold-600 bg-clip-text text-transparent">Precision</span>
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 mb-6 leading-relaxed">
          For over a decade, PhotoFirm has been at the forefront of creative photography. Our team combines technical expertise with artistic vision to create images that immortalize emotions.
        </p>
        <div class="grid grid-cols-3 gap-8 my-8">
          <div class="text-center">
            <div class="text-3xl font-bold text-royal-600 dark:text-royal-400">500+</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Weddings Captured</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-royal-600 dark:text-royal-400">15+</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Awards Won</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-royal-600 dark:text-royal-400">10+</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Years Experience</div>
          </div>
        </div>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/about" class="btn-primary">Learn Our Story</a>
          <a href="/portfolio" class="btn-secondary">View Our Work</a>
        </div>
      </div>
      <div class="order-1 lg:order-2 relative">
        <div class="relative rounded-2xl overflow-hidden glass-card">
          <img src="https://res.cloudinary.com/demo/image/upload/c_fill,w_600,h_700,q_auto,f_auto/samples/people/smiling-man" alt="Photographer at work" class="w-full h-full object-cover"/>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="section-padding bg-beige-50 dark:bg-gray-900">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-serif font-bold text-gray-900 dark:text-white mb-4">Our Services</h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">From intimate moments to grand celebrations, we offer services tailored to your vision.</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- Wedding Photography -->
        <div class="card text-center group"><div class="w-16 h-16 bg-gradient-to-br from-royal-500 to-gold-500 rounded-2xl flex items-center justify-center mx-auto mb-4"><svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path></svg></div><h3 class="text-xl font-serif font-semibold text-gray-900 dark:text-white mb-3">Wedding Photography</h3><p class="text-gray-600 dark:text-gray-300">Capturing the magic and joy of your special day with timeless elegance.</p></div>
        <!-- Portrait Sessions -->
        <div class="card text-center group"><div class="w-16 h-16 bg-gradient-to-br from-royal-500 to-gold-500 rounded-2xl flex items-center justify-center mx-auto mb-4"><svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg></div><h3 class="text-xl font-serif font-semibold text-gray-900 dark:text-white mb-3">Portrait Sessions</h3><p class="text-gray-600 dark:text-gray-300">Professional portraits that capture your personality and essence.</p></div>
        <!-- Commercial Work -->
        <div class="card text-center group"><div class="w-16 h-16 bg-gradient-to-br from-royal-500 to-gold-500 rounded-2xl flex items-center justify-center mx-auto mb-4"><svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path></svg></div><h3 class="text-xl font-serif font-semibold text-gray-900 dark:text-white mb-3">Commercial</h3><p class="text-gray-600 dark:text-gray-300">High-impact commercial imagery for brands, products, and businesses.</p></div>
        <!-- Videography -->
        <div class="card text-center group"><div class="w-16 h-16 bg-gradient-to-br from-royal-500 to-gold-500 rounded-2xl flex items-center justify-center mx-auto mb-4"><svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path></svg></div><h3 class="text-xl font-serif font-semibold text-gray-900 dark:text-white mb-3">Videography</h3><p class="text-gray-600 dark:text-gray-300">Cinematic storytelling that preserves your most precious moments forever.</p></div>
      </div>
    </div>
  </section>

  <PortfolioGrid items={featuredPortfolio} showFilters={false} columns="3"/>

  <!-- Testimonials Section -->
  <section class="section-padding bg-white dark:bg-gray-800">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-serif font-bold text-gray-900 dark:text-white mb-4">What Our Clients Say</h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">Here's what our clients have to say about their experience with PhotoFirm.</p>
      </div>
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {testimonials.map((testimonial) => (
          <div class="card text-center bg-beige-50 dark:bg-gray-700">
            <div class="flex justify-center mb-4">{Array.from({ length: 5 }).map((_, i) => (<svg class={`w-5 h-5 ${i < testimonial.rating ? 'text-gold-400' : 'text-gray-300'}`} fill="currentColor" viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path></svg>))}</div>
            <blockquote class="text-gray-700 dark:text-gray-300 text-lg mb-6 italic">"{testimonial.quote}"</blockquote>
            <div class="flex flex-col items-center">
              <img src={testimonial.image} alt={testimonial.author} class="w-12 h-12 rounded-full object-cover mb-3"/>
              <cite class="not-italic">
                <div class="font-semibold text-gray-900 dark:text-white">{testimonial.author}</div>
                <div class="text-sm text-gray-500 dark:text-gray-400">{testimonial.role}</div>
              </cite>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section-padding bg-gradient-to-r from-royal-600 to-gold-600 text-white">
    <div class="container-custom text-center">
        <h2 class="text-4xl font-serif font-bold mb-6">Ready to Create Something Beautiful?</h2>
        <p class="text-xl text-royal-100 mb-8 max-w-3xl mx-auto">Let's discuss your vision and create stunning imagery that captures the essence of your special moments.</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="bg-white text-royal-700 px-8 py-4 rounded-2xl font-semibold text-lg hover:bg-beige-50 transition transform hover:scale-105">Book Your Session</a>
            <a href="/portfolio" class="border-2 border-white/50 text-white px-8 py-4 rounded-2xl font-semibold text-lg hover:bg-white/20 transition transform hover:scale-105">View Portfolio</a>
        </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>