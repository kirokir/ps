---
// This is the admin panel page. It MUST NOT use any layouts or components.
// It is a plain HTML shell that loads the DecapCMS application.
---
<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="robots" content="noindex" />
  <title>Content Manager</title>

  <!-- This script tells DecapCMS where to find its configuration file -->
  <script is:inline>
    window.CMS_CONFIG = {
      config: {
        load_config_file: '/admin/config.yml',
      },
    };
  </script>

  <!-- This script loads the actual DecapCMS application -->
  <script is:inline src="https://unpkg.com/decap-cms@^3.0.0/dist/decap-cms.js"></script>
</head>
<body>
  <!-- DecapCMS will mount its interface here -->
</body>
</html>